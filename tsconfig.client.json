{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/js/",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "typeRoots": ["./@types/client/**/*"],
    "types": ["@types/node"]
  }
}
